<div class="show-content">

  <h2>Photo detail</h2>

  <div class="card" style="width: 30rem;">
    <div class="card-body">
      <% if Rails.env.production? %>
        <img class="card-img-top" src='<%= "https://storage.googleapis.com/cat_album_storage/#{@photo.image.key}" %>' alt="Card image cap">
      <% elsif Rails.env.development? %>
        <img class="card-img-top" src="<%= url_for(@photo.image) %> " alt="Card image cap">
      <% end %>
      <h5 class="card-title"><%= @photo.caption %></h5>
      <%= link_to 'Edit', edit_photo_path(@photo), class:"btn btn-light" %>
      <%= link_to 'Back', photos_path, class:"btn btn-light" %>
      <%= link_to 'Destroy', @photo, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
    </div>
  </div>
</div>
