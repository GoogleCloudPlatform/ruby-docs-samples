<div class="grid-container">
  <% if @photos.empty? %>
    <p>Album is empty. Click on "New Photo" to add a photo.</p>
  <% else %>
    <% @photos.each do |photo| %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <% if Rails.env.production? %>
            <img class="card-img-top" src='<%= "https://storage.googleapis.com/cat_album_storage/#{photo.image.key}" %>' alt="Card image cap">
          <% elsif Rails.env.development? %>
            <img class="card-img-top" src="<%= url_for(photo.image) %> " alt="Card image cap">
          <% end %>
          <h5 class="card-title"><%= photo.caption %></h5>
          <%= link_to 'Show', photo_path(photo), class:"btn btn-primary" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<%= link_to 'New Photo', new_photo_path, class:"btn btn-info show" %>
